Checks: '
    bugprone-*,
    clang-diagnostic-*,
    clang-analyzer-*,
    cppcoreguidelines-*,
    modernize-*,
    performance-*,
    portability-*,
    readability-*,
    -readability-redundant-access-specifiers
'
WarningsAsErrors: true
FormatStyle: 'file'
CheckOptions:
    - key:      'cppcoreguidelines-special-member-functions.AllowMissingMoveFunctionsWhenCopyIsDeleted'
      value:    'true'